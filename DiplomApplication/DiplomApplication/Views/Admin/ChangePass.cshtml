@model Users
@{

    ViewData["Title"] = "Смена пароля";

}

<div class="text-center">
    <h1 class="display-4">Смена пароля</h1><br>
    <form method="post" asp-controller="Admin" asp-action="Checkpass">
        <label asp-for="OldPassword"></label><br>
        <input type="password" asp-for="OldPassword" /><br>
        <span asp-validation-for="OldPassword"></span><br>

        <label asp-for="Password"></label><br>
        <input type="password" asp-for="Password" /><br>
        <span asp-validation-for="Password"></span><br>

        <label asp-for="Password2"></label><br>
        <input type="password" asp-for="Password2" /><br>
        <span asp-validation-for="Password2"></span><br>
        <label>@ViewData["Mess"]</label><br>
        <input type="submit" value="Изменить пароль" />
    </form>
</div>
