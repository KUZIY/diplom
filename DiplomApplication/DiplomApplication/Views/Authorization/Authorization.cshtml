@model Users
@{

    ViewData["Title"] = "Авторизация";

}

<div class="text-center">

    <h1 class="display-4">Авторизация</h1><br>
    <form method="post" asp-controller="Authorization" asp-action="CheckAuthorization">
        <label>Введите логин:</label><br>
        <input asp-for="Login" value="@ViewData["Login"]" /><br>
        <span asp-validation-for="Login"></span><br>
        <label>Введите пароль:</label><br>
        <input type="password" asp-for="Password" /><br>
		<span asp-validation-for="Password"></span><br><br>

        <input type="submit" value="Войти"/>
    </form><br><br>
    <p>Если у вас нет акаунта пройдите <a asp-area="" asp-controller="Authorization" asp-action="Registration">регистрацию</a>.</p>
</div>
